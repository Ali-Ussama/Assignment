<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Home_List_Item_imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@color/colorAccent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/Home_List_Item_ImageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="normal"
            android:text="A" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/Home_List_Item_name"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="5"
               android:textStyle="bold"
               android:textSize="14sp"
               android:layout_gravity="top|start"
               android:text="CS 101"/>
           <TextView
               android:id="@+id/Home_List_Item_Semester"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:textSize="12sp"
               android:text="Second"
               android:gravity="end"
               android:layout_gravity="bottom|end"/>
       </LinearLayout>

        <TextView
            android:id="@+id/Home_List_Item_description"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:text="This Course about how to make machine think like\nArtificial intelligence has many definitions to discuss.\nThis Course about how to make machine think like\nArtificial intelligence has many definitions.\nThis Course about how to make machine think like\nArtificial intelligence has many definitions."/>

    </LinearLayout>
</LinearLayout>