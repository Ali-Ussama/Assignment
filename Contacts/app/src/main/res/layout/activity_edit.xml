<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.aliosama.contacts.Activities.EditActivity">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/UpdateImageView"
        android:layout_width="114dp"
        android:layout_height="114dp"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/UpdateNameET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"/>
        <EditText
            android:id="@+id/UpdatePhoneET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/UpdateBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/UpdateBtn"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:onClick="onUpdateListener"/>
        <Button
            android:id="@+id/DeleteBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/DeleteBtn"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:onClick="onDeleteListener"/>

    </LinearLayout>

</LinearLayout>
